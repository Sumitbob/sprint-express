{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
        "SQL": "readonly",
        "process" : "readonly"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": [
            "error"
        ],
        "no-unused-vars": [
            "error"
        ],
        "no-console": [
            "warn"
        ],
        "no-undef": [
            "error"
        ],
        "prefer-const": [
            "error"
        ],
        "no-var": [
            "error"
        ],
        "no-extra-semi": [
            "error"
        ],
        "arrow-spacing": [
            "error"
        ],
        "comma-spacing": [
            "error"
        ],
        "object-curly-spacing": [
            "error"
        ],
        "brace-style": [
            "error"
        ]
    }
}
